---
const events = [
  {
    image: '/events/peachy.webp',
    title: 'peachy',
    description:
      'es una manera americana informal para expresar que algo es muy bueno, excelente o maravilloso',
    thisIs:
      'Un espacio para nosotras, prepara tu agenda porque tenemos eventos solo para las girls',
    location: 'Centro, Tlaxcala',
    date: '15 de Abril, 2024',
    time: '19:00',
    price: 'Gratis',
    linkToRegister: '#',
  },
];
---

<section class="py-16 sm:py-20">
  <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <div class="flex flex-col gap-8 lg:gap-12">
      <h2 class="text-3xl font-medium tracking-tight sm:text-4xl">Pr√≥ximos eventos</h2>
      <div class="grid gap-8 lg:grid-cols-2">
        {
          events.map((event) => (
            <div class="bg-primary-500/10 dark:bg-primary-400/10 flex flex-col gap-6 rounded-3xl px-6 py-8">
              <img
                src={event.image}
                alt={event.title}
                class="h-full w-full rounded-lg object-cover"
              />
              <div class="flex flex-col gap-4">
                <h3 class="text-2xl font-medium">{event.title}</h3>
                <p class="text-primary-950/70 dark:text-primary-200/70 text-base">
                  <span class="italic">
                    {event.title.charAt(0).toUpperCase() + event.title.slice(1)}
                  </span>{' '}
                  {event.description}
                </p>
                <p class="text-primary-950/70 dark:text-primary-200/70 text-base">{event.thisIs}</p>
              </div>
              <div class="flex flex-col gap-3 text-base">
                <div class="flex items-center gap-2">
                  <svg
                    class="text-primary-600 dark:text-primary-400 h-5 w-5"
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    fill="currentColor"
                  >
                    <path d="M12 23.7279L5.63604 17.364C2.12132 13.8492 2.12132 8.15076 5.63604 4.63604C9.15076 1.12132 14.8492 1.12132 18.364 4.63604C21.8787 8.15076 21.8787 13.8492 18.364 17.364L12 23.7279ZM16.9497 15.9497C19.6834 13.2161 19.6834 8.78392 16.9497 6.05025C14.2161 3.31658 9.78392 3.31658 7.05025 6.05025C4.31658 8.78392 4.31658 13.2161 7.05025 15.9497L12 20.8995L16.9497 15.9497Z" />
                  </svg>
                  <span>{event.location}</span>
                </div>
                <div class="flex items-center gap-2">
                  <svg
                    class="text-primary-600 dark:text-primary-400 h-5 w-5"
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    fill="currentColor"
                  >
                    <path d="M9 1V3H15V1H17V3H21C21.5523 3 22 3.44772 22 4V20C22 20.5523 21.5523 21 21 21H3C2.44772 21 2 20.5523 2 20V4C2 3.44772 2.44772 3 3 3H7V1H9ZM20 11H4V19H20V11ZM7 5H4V9H20V5H17V7H15V5H9V7H7V5Z" />
                  </svg>
                  <span>{event.date}</span>
                </div>
                <div class="flex items-center gap-2">
                  <svg
                    class="text-primary-600 dark:text-primary-400 h-5 w-5"
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    fill="currentColor"
                  >
                    <path d="M12 22C6.47715 22 2 17.5228 2 12C2 6.47715 6.47715 2 12 2C17.5228 2 22 6.47715 22 12C22 17.5228 17.5228 22 12 22ZM12 20C16.4183 20 20 16.4183 20 12C20 7.58172 16.4183 4 12 4C7.58172 4 4 7.58172 4 12C4 16.4183 7.58172 20 12 20ZM13 12H17V14H11V7H13V12Z" />
                  </svg>
                  <span>{event.time}</span>
                </div>
                <div class="flex items-center gap-2">
                  <svg
                    class="text-primary-600 dark:text-primary-400 h-5 w-5"
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    fill="currentColor"
                  >
                    <path d="M12 22C6.47715 22 2 17.5228 2 12C2 6.47715 6.47715 2 12 2C17.5228 2 22 6.47715 22 12C22 17.5228 17.5228 22 12 22ZM12 20C16.4183 20 20 16.4183 20 12C20 7.58172 16.4183 4 12 4C7.58172 4 4 7.58172 4 12C4 16.4183 7.58172 20 12 20ZM11 15H13V17H11V15ZM11 7H13V13H11V7Z" />
                  </svg>
                  <span>{event.price}</span>
                </div>
              </div>
              <a
                href={event.linkToRegister}
                class="inline-flex items-center justify-center rounded-full bg-black px-5 py-3 text-base font-medium text-white transition hover:bg-zinc-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-zinc-600 dark:bg-zinc-100 dark:text-zinc-900 dark:hover:bg-zinc-200 dark:focus-visible:outline-zinc-400"
              >
                Registrarme
              </a>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
